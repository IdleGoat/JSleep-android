<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="20dp"
    tools:context=".CreateRoomActivity">
    <TextView
        android:id="@+id/createroom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Room"
        android:fontFamily="@font/nunitobold"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/createroom_title"
        android:background="@drawable/rounded_listviewitem"
        android:layout_height="650dp"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Room"
                android:textSize="16sp"
                android:fontFamily="@font/nunitobold"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/createroom_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/placeholder"
                android:fontFamily="@font/nunitosemibold"
                android:hint="Name"
                android:drawableStart="@drawable/profile_logo"
                android:textColor="@color/placeholder"
                android:drawablePadding="12dp"
                android:textSize="20sp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="16sp"
                android:fontFamily="@font/nunitobold"
                android:textColor="@color/black"/>
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/createroom_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/placeholder"
                android:fontFamily="@font/nunitosemibold"
                android:hint="Address"
                android:drawableStart="@drawable/address_icon"
                android:textColor="@color/placeholder"
                android:paddingStart="-1dp"
                android:drawablePadding="9dp"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textSize="16sp"
                android:fontFamily="@font/nunitobold"
                android:textColor="@color/black"/>
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/createroom_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/placeholder"
                android:fontFamily="@font/nunitosemibold"
                android:hint="Price"
                android:drawableStart="@drawable/money_icon"
                android:textColor="@color/placeholder"
                android:drawablePadding="12dp"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ukuran"
                android:textSize="16sp"
                android:fontFamily="@font/nunitobold"
                android:textColor="@color/black"/>
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/createroom_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/placeholder"
                android:fontFamily="@font/nunitosemibold"
                android:hint="Size"
                android:drawableStart="@drawable/size_icon"
                android:textColor="@color/placeholder"
                android:drawablePadding="12dp"
                android:textSize="20sp" />
            <LinearLayout
                android:id="@+id/createroom_facilitylayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:useDefaultMargins="true"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/detail_descriptionfacilitytext">

                <ToggleButton
                    android:textColor="@drawable/toggletext_selector"

                    android:id="@+id/createroom_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawableStart="@drawable/detail_wifi"
                    android:fontFamily="@font/nunitosemibold"
                    android:textSize="14sp"
                    android:textOff="Wifi"
                    android:textOn="Wifi"
                    android:textAllCaps="false"
                    android:background="@drawable/togglebutton_selector"

                    />

                <ToggleButton
                    android:textColor="@drawable/toggletext_selector"

                    android:id="@+id/createroom_bathtub"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawableStart="@drawable/detail_bath"
                    android:fontFamily="@font/nunitosemibold"
                    android:textSize="14sp"
                    android:textOff="Bathtub"
                    android:textOn="Bathtub"
                    android:textAllCaps="false"
                    android:background="@drawable/togglebutton_selector"
                    />

                <ToggleButton
                    android:textColor="@drawable/toggletext_selector"

                    android:id="@+id/createroom_balcony"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawableStart="@drawable/detail_balcony"
                    android:fontFamily="@font/nunitosemibold"
                    android:textSize="14sp"
                    android:textOff="Balcony"
                    android:textOn="Balcony"
                    android:textAllCaps="false"
                    android:background="@drawable/togglebutton_selector"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_facilitylayout2"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/detail_facilitylayout1">

                <ToggleButton
                    android:textColor="@drawable/toggletext_selector"

                    android:id="@+id/createroom_ac"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawableStart="@drawable/detail_ac"
                    android:fontFamily="@font/nunitosemibold"
                    android:textSize="14sp"
                    android:textOff="AC"
                    android:textOn="AC"
                    android:textAllCaps="false"
                    android:background="@drawable/togglebutton_selector"
                    />
                <ToggleButton
                    android:textColor="@drawable/toggletext_selector"

                    android:id="@+id/createroom_fitness"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawableStart="@drawable/detail_gym"
                    android:fontFamily="@font/nunitosemibold"
                    android:textSize="14sp"
                    android:textOff="Fitness"
                    android:textOn="Fitness"
                    android:textAllCaps="false"
                    android:background="@drawable/togglebutton_selector"
                    />
                <ToggleButton
                    android:textColor="@drawable/toggletext_selector"
                    android:id="@+id/createroom_pool"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"

                    android:drawableStart="@drawable/detail_pool"
                    android:fontFamily="@font/nunitosemibold"
                    android:textSize="14sp"
                    android:textOff="Pool"
                    android:textOn="Pool"
                    android:textAllCaps="false"
                    android:background="@drawable/togglebutton_selector"
                    />

            </LinearLayout>

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/detail_facilitylayout2">
                <ToggleButton
                    android:textColor="@drawable/toggletext_selector"
                    android:id="@+id/createroom_refrigerator"

                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawableStart="@drawable/detail_fridge"
                    android:fontFamily="@font/nunitosemibold"
                    android:textSize="14sp"
                    android:textOff="Refrigerator"
                    android:textOn="Refrigerator"
                    android:textAllCaps="false"
                    android:background="@drawable/togglebutton_selector"
                    />
                <ToggleButton
                    android:textColor="@drawable/toggletext_selector"
                    android:id="@+id/createroom_restaurant"

                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawableStart="@drawable/detail_restaurant"
                    android:fontFamily="@font/nunitosemibold"
                    android:textSize="14sp"
                    android:textOff="Restaurant"
                    android:textOn="AC"
                    android:textAllCaps="false"
                    android:background="@drawable/togglebutton_selector"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bed"
                android:textSize="15sp"
                android:fontFamily="@font/nunitobold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />

            <Spinner
                android:id="@+id/createroom_spinner_bed"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    />

                <Spinner
                    android:id="@+id/createroom_spinner_city"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createroom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Room"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>